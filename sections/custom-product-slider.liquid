      <div class="mobile-custom-grid-sect-cont">
        <h3>{{section.settings.mob-title}}</h3>
        <p>{{section.settings.mob-content}}</p>
      </div>
      <div class="img-full-width">
        <img src="{{section.settings.image_1 | img_url: "original"}}" />
      </div>
      <div class="image-half-width">
        <div class="image-half-width-box">
        	<img src="{{section.settings.image_2 | img_url: "original"}}" />
        </div>
        <div class="image-half-width-box">
          <img src="{{section.settings.image_3 | img_url: "original"}}" />
        </div>
      </div>
  </div>
  </div>
</div>
