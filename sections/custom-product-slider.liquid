<div class="sin-pro-text-img-slide-main">
  <div class="desk-custom-product-slider-sect">
    <div class="left-content-section">
      <div class="left-content-section-inn">
      	<h3>{{section.settings.title}}</h3>
      	<p>{{section.settings.content}}</p>
      </div>
    </div>
    <div class="right-slider-section">
