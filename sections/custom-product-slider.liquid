      {% for block in section.blocks %}
      <div class="custom-items">
        <img src="{{block.settings.image | img_url: "grande"}}" />
      </div>
      {%endfor%}
      </div>
    </div>
  </div>
  <div class="mobile-custom-grid-sect">
