$(document).ready(function(){
  
  /********************* Header Fixed ********************/
  $(window).scroll(function() {    
    var scroll_val = $(".cst-header-sec-main").scrollTop();    
    if($(window).scrollTop() > scroll_val+34){
        $("#shopify-section-header").addClass("header-fixed");
    }
    else{
    $("#shopify-section-header").removeClass("header-fixed");
    }
})
  /********************Fotter Accordion ***********************/
  $( function() {
    $( "#footer-accordion" ).accordion({
      collapsible: true
    });
  } );
    $( function() {
    $( ".accordion-child" ).accordion({
      collapsible: true, heightStyle: "content"
    });
  } );
  /*********************Currency Convertor **********************/
  $(".custom_currency_wrapper").click(function(){
  $("#custom-currency-list").slideToggle(100); 
  })
 
  $("#custom-currency-list li").click(function(){
  var custom_currency = $(this).html();
   $(".custom-currency-drop").html(custom_currency);
    $("#currency-list .disclosure-list__item").each(function(){
    var actual_currency_list = $(this).children("a").attr("data-value");
      if(custom_currency==actual_currency_list){
      $(this).trigger("click");
      }
    })
  })
  
  
  /*****************Mobile Header ***********************/
  $(".cst-mob-header-menu-toggle").click(function(){
  $(this).toggleClass("custom-mobile-close");
    $(".cst-mob-header").toggleClass("show-mobile-menu");
    $("body").toggleClass("for-custom-mobile-menu");
  })
  
  $(".mobile-accordion-list").click(function(){
   
    if($(this).hasClass("custom-open-accordion")){
    $(this).removeClass("custom-open-accordion");
    }
    else{
    $(this).addClass("custom-open-accordion");
      $(this).siblings("li").removeClass("custom-open-accordion");
    }
  })
  $(".tab-listing").click(function(){
   
    $(this).addClass("active-tab");
    $(this).siblings("li").removeClass("active-tab");
   
    var data_tab = $(this).attr("data-tab");
    $(".cst-mob-header-dd-tab-cont").each(function(){
    var data_content = $(this).attr("data-content");
      if(data_content==data_tab){
      $(this).show();
       $(this).siblings(".cst-mob-header-dd-tab-cont").hide();
      }
    })
  })
  /*******************Top bar close for Mobile *****************/
  $(".ext-top-bar-left-inn-close").click(function(){
  $(".ext-top-bar").addClass("close-top-bar");
  })
  
  /************************ Search Open on Icon Click *****************/
  $(".custom-search").click(function(){
  $("html").addClass("js-drawer-open js-drawer-open-top");
    $("body").addClass("js-drawer-open js-drawer-open-top prevent-scrolling");
  })
  $(".btn--link.search-bar__close.js-drawer-close").click(function(){
  $("html").removeClass("js-drawer-open js-drawer-open-top");
    $("body").removeClass("js-drawer-open js-drawer-open-top prevent-scrolling");
  })
  
  
  /************ Top Bar Slider *********************/
  if ($(window).width() < 749) {
  $('.hm-fav-product-listing-main').slick({
 dots: false,
    prevArrow: false,
    slidesToShow: 1,
  slidesToScroll: 1,
    nextArrow: false
});
     $('.logo-slider-mobile').slick({
 dots: true,
    prevArrow: false,
    slidesToShow: 1,
  slidesToScroll: 1,
    nextArrow: false
});
  }
  $('.custom-slider').slick({
  slidesToShow: 1,
  slidesToScroll: 1,
  autoplay: true,
  autoplaySpeed: 5000,
  draggable: true,
    autoplay: true,
    autoplaySpeed: 5000,
    arrows: false,
    dots: true,
    fade: true,
    speed: 500,
    infinite: true,
    cssEase: 'ease-in-out',
    touchThreshold: 100,
    dots: false,
    prevArrow: false,
    nextArrow: false
});
$('.hm-lt-sticky-section-left-slider').slick({
    dots: true,
    prevArrow: false,
    nextArrow: false
});	
}) 